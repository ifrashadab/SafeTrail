{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "noEmit": false,
      "outDir": "dist/server",
      "rootDir": ".",
      "module": "ESNext",
      "target": "ES2020",
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "allowImportingTsExtensions": false,
      "baseUrl": ".",
      "paths": {
        "@shared/*": ["shared/*"]
      }
    },
    "include": ["server/**/*", "shared/**/*"]
  }
  